include ./base-entity-component-mixin.jade

section(v-if="!add", :class="EntityClass.modelName")
  .header
    +dropdown()
    h1 #[i.fa(:class="'fa-' + EntityClass.params.icon")] {{lodash.startCase(EntityClass.modelName)}}: {{entity.name}}
  .body
    block body
.add(v-else)
  button.btn.btn-primary.btn-block(type="button", @click="showModal = true") #[i.fa.fa-plus] Add {{lodash.startCase(EntityClass.modelName)}}
+modal()
