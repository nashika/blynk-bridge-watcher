include ./base-entity-component-mixin.jade

section(v-if="!add", :class="EntityClass.params.tableName")
  .header
    +dropdown()
    h1 #[i.fa(:class="'fa-' + EntityClass.params.icon")] {{lodash.startCase(EntityClass.params.entityName)}}: {{entity.name}}
  .body
    block body
.add(v-else)
  button.btn.btn-primary.btn-block(v-if="EntityClass.params.tableName == EntityClass.params.entityName",
  type="button", @click="showModal = true") #[i.fa.fa-plus] Add {{lodash.startCase(EntityClass.params.entityName)}}
  button.btn.btn-primary(v-else,
  type="button", @click="showModal = true") #[i.fa(:class="'fa-' + EntityClass.params.icon")] {{lodash.startCase(EntityClass.params.entityName)}}
+modal()
